{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended"
  ],
  "packageRules": [
    {
      "matchDepPatterns": ["*"],
      "minimumReleaseAge": "7 days"
    },
    {
      "matchManagers": ["github-actions"],
      "pinDigests": true
    }
  ],
  "schedule": ["before 5am on monday"]
}
