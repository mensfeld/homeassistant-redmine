{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended"
  ],
  "packageRules": [
    {
      "matchDepPatterns": [
        "*"
      ],
      "minimumReleaseAge": "7 days"
    },
    {
      "matchManagers": [
        "github-actions"
      ],
      "pinDigests": true
    },
    {
      "description": "Group ruby/setup-ruby action with ruby version updates",
      "matchPackageNames": [
        "ruby/setup-ruby",
        "ruby"
      ],
      "groupName": "ruby setup"
    }
  ],
  "schedule": [
    "before 5am on monday"
  ]
}
